@model IEnumerable<Ecommerce_Application.Models.ShoppingCartItem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShoppingCart.CartID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedAt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShoppingCart.CartID)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CartItemID }) |
            @Html.ActionLink("Details", "Details", new { id=item.CartItemID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CartItemID })
        </td>
    </tr>
}

</table>
